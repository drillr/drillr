
<div class="pull-left" style="margin-right: 0.5em">
<%= image_tag @achievement.badge.normal_size.url, class: "img-thumbnail" %>
</div>
<h1><%= @achievement.name %></h1>
<p>
  <em>Unlocks at <strong><%= @achievement.point_value_display %></strong></em>
</p>


<% if can? :manage, @achievement %>
<br />
<hr>
  <p><%= link_to "edit", edit_achievement_path(@achievement), class: "btn btn-default" %>
  <%= link_to "delete", achievement_path(@achievement), method: :delete, class: "btn btn-danger" %></p>
<% end %>
