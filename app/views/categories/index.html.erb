<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Categories</title>
  </head>
  <body>

    <h1>Categories</h1>

    <% @categories.each do |category| %>
      <div class="">
        <%= link_to category.name, category_path(category), class: "btn btn-default btn-lg" %>
        <% if can? :edit, category %>
          <%= link_to "Edit", edit_category_path(category), class: "btn btn-info btn-sm" %>
        <% end %>
        <% if can? :destroy, category %>
          <%= link_to("Delete", category_path(category), {method: :delete, class: "btn btn-danger btn-sm", data: {confirm: "Are you sure you want to delete this category?"}}) %>
        <% end %>
      </div>
    <% end %>

  </body>
</html>
