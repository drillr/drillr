<h1>Drill Group: <%= @drill_group.name %> </h1>
<p> <%= @drill_group.description %> </p>
<h3> Category:<%= @drill_group.category.name %> </h3>

<%= link_to "Edit", edit_drill_group_path(@drill_group), class: "btn btn-info btn-sm" %>
<%= link_to("Delete", drill_group_path(@drill_group), {method: :delete,
                                          class: "btn btn-danger btn-sm",
                                          data: {confirm: "Are you sure?"}})%>
<h2>All Drills</h2>
<hr>
<% @drill_group.drills.each do |drill| %>
  <h1><%= link_to drill.title, drill_path(drill) %> </h1>
<% end %>
